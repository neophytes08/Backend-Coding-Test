{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "format": "prettier --write \"src/*.js\" \"tests/*.ts\" \"index.js\"",
    "test": "mocha tests",
    "coverage": "nyc npm run test",
    "start": "node index.js",
    "swagger-autogen": "node swagger.js",
    "lint": "./node_modules/.bin/eslint src/*",
    "prepare": "husky install"
  },
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "sqlite3": "^5.0.8",
    "swagger-autogen": "^2.21.2",
    "swagger-ui-express": "^4.4.0"
  },
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "supertest": "^4.0.2",
    "winston": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint && npm run coverage"
    }
  }
}
